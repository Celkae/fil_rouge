

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form  action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <!-- <label for="username">{{ 'security.login.username'|trans }}</label> -->
    <div class="input-marge"><input class="input-style" type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></div>

    <!-- <label for="password">{{ 'security.login.password'|trans }}</label> -->
    <div class="input-marge"><input class="input-style" type="password" id="password" name="_password" required="required" /></div>

    <input class="squaredFour" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label class="rememberMe" for="remember_me">{{ 'security.login.remember_me'|trans }}</label><br/>

{% endblock fos_user_content %}

