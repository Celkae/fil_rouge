{% extends 'base.html.twig' %}

{% block panel %}
  <ul class="nav nav-pills nav-stacked">
    <li class="active">
      <a href="/">Home</a>
    </li>
    <li>
      <a href="{{ path('serie_show', { 'id': episode.serie.id }) }}">Retour à la fiche</a>
    </li>
  </ul>
{% endblock %}

{% block side_content %}
  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
  <div class="panel panel-default">
    <div class="panel-heading">Menu admin</div>
    <div class="panel-body">
      <div class="col-md-12">
        <div class="row">
          <a href="{{ path('serie_edit', { 'id': episode.id }) }}">Edit</a>
        </div>
        <div class="row">
          <a href="{{ path('episode_new', { 'id': episode.serie.id }) }}">Ajouter un épisode</a>
        </div>
        <div class="row">
        {% if is_granted("ROLE_ADMIN") %}
          {{ form_start(delete_form) }}
          <button type="submit" id="delete" class="btn btn-xs btn-danger"><i class='fa fa-exclamation-triangle' aria-hidden='true'></i> Delete</button>
          {{ form_end(delete_form) }}
        {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-8">
      <h2>{{ episode.serie }}, <small>Saison {{ episode.season }}, Episode {{ episode.episodeNumber }}</small></h2>
      <h3>{{ episode.title }}</h3>
      <p>{{ episode.resume }}</p>
    </div>
    <div class="col-md-4">
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <button id="seen" class="btn btn-primary btn-sm"></button>
      {% endif %}
      <h4>Notez cet épisode</h4>
      {{ render( controller( "IdeatoStarRatingBundle:StarRating:displayRate", { contentId: episode.id, contentType: 'Episode' }) ) }} <!-- Star Rating ! -->
    </div>
    <div class="col-sm-12 jumbotron">
        {% stylesheets 'css/comments.css' %}
          <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        {% if is_granted("IS_AUTHENTICATED_ANONYMOUSLY") %} <!-- condition si authentifié -->
          {% include 'includes/not_logged.html.twig' %}
        {% endif %}
        {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': episode.id } %} <!-- affichage des commentaires et du formulaire -->
      </div>
  </div>

    {% javascripts
      '@IdeatoStarRatingBundle/Resources/public/jquery.raty.js'
      '@IdeatoStarRatingBundle/Resources/public/jquery.starrating.js'
      'js/ajaxServices.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    <script type="text/javascript">
        /**
         * is seen ? Ajax request
         *
         * @data : seen id
         */
      $.ajax(
        {
          url:"{{ path('ajax_isseen', { 'id': episode.id }) }}",
          success: function(data){
            if (data) {
              $("#seen").html(data);
            }
          },
          error: function(error){
            //console.log(error);
          }
        }
      );

       $('#seen').off().on("click", function()
       {
         /**
          * seen Ajax request
          *
          * @data : episode id
          */
         $.ajax(
           {
             url:"{{ path('ajax_seen', { 'id': episode.id }) }}",
             data: { id: {{ episode.id}} },
             success: function(data){
                $("#seen").html(data);
             },
             error: function(error){
             }
           }
         );
       });
    </script>
    {% endjavascripts %}
{% endblock %}
