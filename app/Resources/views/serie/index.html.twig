{% extends 'base.html.twig' %}

{% block body %}
    <h1>Serie list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Poster </th>
                <th>Resume</th>
                <th>Season</th>
                <th>Episode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for serie in series %}
            <tr>
                <td><a href="{{ path('serie_show', { 'id': serie.id }) }}">{{ serie.id }}</a></td>
                <td>{{ serie.title }}</td>
                <td><img src="{{ asset(serie.getImageName()) }}" /></td>
                <td>{{ serie.resume }}</td>
                <td>{{ serie.season }}</td>
                <td>{{ serie.episode }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('serie_show', { 'id': serie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('serie_edit', { 'id': serie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('serie_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
