{% extends 'base.html.twig' %}

{% block body %}
  <div class="row">
      <div class="col-lg-10">
          <h1 class="page-header">Serie list ({{ pagination.getTotalItemCount }})</h1>
      </div>
  </div>
  <div class="row">
  {% for s in pagination %}
    <a class="" href="{{ path('serie_show', { 'id': s.id }) }}">
      <div class="container col-lg-3 col-sm-4 col-xs-6">
        <h2 class="titre-serie">{{ s.title }}</h2>
        <img class="img-responsive img-film-galerie" src="{{ asset(s.getPicture()) }}" alt="">
      </div>
    </a>
  {% endfor %}
  </div>
  <div class="row mt30p">
    <div class="text-center">
      {{ knp_pagination_render(pagination) }}
    </div>
  </div>
{% endblock %}
