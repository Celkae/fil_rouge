{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Serie list</h1>
            </div>
        </div>
    </div>

        {% for serie in series %}
        
        <a class="" href="{{ path('serie_show', { 'id': serie.id }) }}">
            <div class="container col-lg-3 col-sm-4 col-xs-6">
                <h2 class="titre-serie">{{ serie.title }}</h2>
                <img class="img-responsive img-film-galerie" src="{{ asset(serie.getImageName()) }}" alt="">
            </div>
        </a>

        {% endfor %}
    <ul>
        <li>
            <a href="{{ path('serie_new') }}">Create a new entry</a>
        </li>
    </ul>
</div>



    <!-- Page Content -->

            
{% endblock %}
