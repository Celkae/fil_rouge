{% extends 'base.html.twig' %}

{% block panel %} <!-- surcharge du block panel gauche -->
  <ul class="nav nav-pills nav-stacked white">
    <li class="active">
      <a class="introfont blue" href="/">{{ 'serie.show.home'|trans }}</a>
    </li>
    <li>
      <a href="{{ path('serie_index') }}" class="grey-txt">{{ 'serie.show.back_list'|trans }}</a>
    </li>
  </ul>
{% endblock %}

{% block body %}
    <h2 class="mb20p grey-txt up-case">{{ 'serie.edit.edit'|trans }}</h2>
    <hr>
    {{ form_start(edit_form, {'method': 'post', 'action': path('serie_edit', { 'id': serie.id }), 'attr': {'class': 'form'}}) }}
    <div class="form-group">
      <label for="title" class="control-label col-sm-2">{{ 'serie.new.title'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.title, {'attr': {'class': 'form-control input-sm'}}) }}
      </div>
    </div>
    <div class="form-group">
      {% if app.request.getLocale() == 'fr' %}
      <label for="resume_fr" class="control-label col-sm-2">{{ 'serie.new.resume'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.resumeFr, {'attr': {'class': 'form-control input-sm'}}) }}
        {{ form_widget(edit_form.resumeEn, {'attr': {'class': 'form-control input-sm hidden'}}) }}
      </div>
      {% else %}
      <label for="resume_en" class="control-label col-sm-2">{{ 'serie.new.resume'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.resumeEn, {'attr': {'class': 'form-control input-sm'}}) }}
        {{ form_widget(edit_form.resumeFr, {'attr': {'class': 'form-control input-sm hidden'}}) }}
      </div>
      {% endif %}
    </div>
    <div class="form-group">
      <label for="season" class="control-label col-sm-2">{{ 'serie.new.number_of_season'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.season, {'attr': {'class': 'form-control input-sm'}}) }}
      </div>
    </div>
    <div class="form-group">
      <label for="status" class="control-label col-sm-2">Status</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.status, {'attr': {'class': 'form-control input-sm'}}) }}
      </div>
    </div>
    <div class="form-group">
      <label for="nationality" class="control-label col-sm-2">{{ 'serie.new.nationality'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.nationality, {'attr': {'class': 'form-control input-sm'}}) }}
      </div>
    </div>
    <div class="form-group">
      <label for="director" class="control-label col-sm-2">{{ 'serie.new.director'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.director, {'attr': {'class': 'form-control input-sm'}}) }}
      </div>
    </div>
    <div class="form-group">
      <label for="actors" class="control-label col-sm-2">{{ 'serie.new.actors'|trans }}</label>
      <div class="col-sm-10 mb20p">
        {{ form_widget(edit_form.actors, {'attr': {'class': 'form-control input-sm'}}) }}
      </div>
    </div>
    <div class="form-group">
      <label for="picture" class="control-label col-sm-2">{{ 'serie.new.picture'|trans }}</label>
      <div class="col-sm-10 mb20p">
        <p>{{ 'serie.new.file'|trans }}</p>
        {{ form_widget(edit_form.picture, {'attr': {'class': 'file'}}) }}
      </div>
    </div>
    <div class="col-sm-12 mb20p">
      <input type="submit" class="btn blue mb20p flt-r" value="&nbsp;&nbsp;{{ 'serie.new.create'|trans }}&nbsp;&nbsp;" />
    </div>
  {{ form_end(edit_form) }}

{% endblock %}
